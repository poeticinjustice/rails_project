<h1>Get that job!</h1>

<%= link_to 'New post', new_article_path %>

<table>
  <tr>
    <th>Title:</th>
    <th>Link:</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.link %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'You cray' } %>
      </td>
    </tr>
  <% end %>
</table>
